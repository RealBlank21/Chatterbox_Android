<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".SettingsActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textAppearance="?attr/textAppearanceListItem" />

        <EditText
            android:id="@+id/edit_text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_your_username"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/openrouter_api_key"
            android:textAppearance="?attr/textAppearanceListItem" />

        <EditText
            android:id="@+id/edit_text_api_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/paste_your_api_key_here"
            android:inputType="textPassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/preferred_model"
            android:textAppearance="?attr/textAppearanceListItem" />

        <EditText
            android:id="@+id/edit_text_preferred_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/e_g_mistralai_mistral_7b_instruct"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/global_system_prompt"
            android:textAppearance="?attr/textAppearanceListItem" />

        <EditText
            android:id="@+id/edit_text_global_system_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="@string/optional_override_for_all_characters"
            android:inputType="textMultiLine"
            android:minLines="3" />

        <Button
            android:id="@+id/button_save_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="@string/save" />

    </LinearLayout>
</ScrollView>