<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.SettingsActivity">

    <LinearLayout
        android:id="@+id/layout_tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:padding="4dp">

        <Button
            android:id="@+id/tab_persona"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Persona"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tab_llm"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LLM"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tab_appearance"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Visuals"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tab_backup"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Backup"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/layout_persona"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Persona"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <Spinner
                    android:id="@+id/spinner_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/button_add_persona"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add New"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/button_delete_persona"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:textColor="#F44336"
                        style="?attr/borderlessButtonStyle"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_persona_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. User"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_persona_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="Describe yourself to the AI..."
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Username (Optional)"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edit_text_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_username"
                    android:inputType="textPersonName"
                    android:textSize="14sp"/>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/layout_llm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/openrouter_api_key"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_api_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/paste_your_api_key_here"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/text_view_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/loading_credits"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/preferred_model"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/edit_text_preferred_model"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/e_g_mistralai_mistral_7b_instruct"
                        android:inputType="text"
                        android:completionThreshold="1" />

                    <ImageButton
                        android:id="@+id/button_refresh_models"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_popup_sync"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Refresh Models" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_view_model_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#1A000000"
                    android:padding="8dp"
                    android:text="Select a model to see details"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/context_limit_turns"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_context_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/context_limit_hint"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Temperature (Default)"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <EditText
                    android:id="@+id/edit_text_temperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0.0 - 2.0 (Default: 1.0)"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Top P"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <EditText
                    android:id="@+id/edit_text_top_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0.0 - 1.0 (Default: 1.0)"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Top K"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <EditText
                    android:id="@+id/edit_text_top_k"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0 (Default: 0 / Unlimited)"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Frequency Penalty"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <EditText
                    android:id="@+id/edit_text_freq_penalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="-2.0 - 2.0 (Default: 0.0)"
                    android:inputType="numberDecimal|numberSigned" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Presence Penalty"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <EditText
                    android:id="@+id/edit_text_pres_penalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="-2.0 - 2.0 (Default: 0.0)"
                    android:inputType="numberDecimal|numberSigned" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Repetition Penalty"
                    android:textAppearance="?attr/textAppearanceListItem" />
                <EditText
                    android:id="@+id/edit_text_rep_penalty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1.0 - 2.0 (Default: 1.0)"
                    android:inputType="numberDecimal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/global_system_prompt"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_global_system_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/optional_override_for_all_characters"
                    android:inputType="textMultiLine"
                    android:minLines="3" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/layout_appearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Character List Style"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/radio_group_list_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/radio_mode_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List"
                        android:layout_marginEnd="16dp"/>

                    <RadioButton
                        android:id="@+id/radio_mode_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card"/>
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Color to Edit"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:id="@+id/container_preview_primary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="@drawable/bg_character_message"
                        android:layout_marginEnd="16dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_preview_primary"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardElevation="4dp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Primary"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_preview_secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_preview_secondary"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="@color/black"
                            app:cardElevation="4dp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Secondary"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:id="@+id/container_preview_narrative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp"
                        android:layout_marginEnd="16dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_preview_narrative"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="@android:color/darker_gray"
                            app:cardElevation="4dp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*Text*"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/container_preview_dialogue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_preview_dialogue"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardBackgroundColor="@android:color/white"
                            app:cardElevation="4dp"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&quot;Text&quot;"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>

                <com.github.antonpopoff.colorwheel.ColorWheel
                    android:id="@+id/color_wheel"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="24dp"/>

                <com.github.antonpopoff.colorwheel.gradientseekbar.GradientSeekBar
                    android:id="@+id/gradient_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    app:gsb_offset="1.0"
                    app:gsb_orientation="horizontal"
                    android:layout_marginBottom="24dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chat Layout"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bubble Width"
                    android:textSize="12sp"
                    android:layout_gravity="start"/>

                <SeekBar
                    android:id="@+id/seekbar_bubble_width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50"
                    android:progress="40"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Line Spacing"
                    android:textSize="12sp"
                    android:layout_gravity="start"/>

                <SeekBar
                    android:id="@+id/seekbar_line_spacing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="20"
                    android:progress="0"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note: Changes apply after restart."
                    android:textSize="12sp"
                    android:textStyle="italic"/>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_backup"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full App Backup"
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Backs up everything including chats and settings. Warning: Importing this will overwrite current data."
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/button_export_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Export Full Backup" />

                <Button
                    android:id="@+id/button_import_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Import Full Backup" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Character Data Only"
                    android:textStyle="bold"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Export characters and scenarios to share or transfer. Importing appends to your list."
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/button_export_characters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Export Characters" />

                <Button
                    android:id="@+id/button_import_characters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:text="Import Characters" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Danger Zone"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/button_clear_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear All Data"
                    android:backgroundTint="#F44336"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_save_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?android:attr/colorBackground"
        android:elevation="8dp">

        <Button
            android:id="@+id/button_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />
    </LinearLayout>

</LinearLayout>