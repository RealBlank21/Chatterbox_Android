<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/layout_tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:padding="4dp">

        <Button
            android:id="@+id/tab_persona"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Persona"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tab_llm"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LLM"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tab_appearance"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Visuals"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tab_backup"
            style="?attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Backup"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:id="@+id/layout_persona"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Persona"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <Spinner
                    android:id="@+id/spinner_persona"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/button_add_persona"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add New"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/button_delete_persona"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Delete"
                        android:textColor="#F44336"
                        style="?attr/borderlessButtonStyle"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_persona_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="e.g. User"
                    android:inputType="textPersonName"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_persona_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="Describe yourself to the AI..."
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:layout_marginBottom="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Username (Optional)"
                    android:textSize="12sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/edit_text_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_your_username"
                    android:inputType="textPersonName"
                    android:textSize="14sp"/>

            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/layout_llm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/openrouter_api_key"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_api_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/paste_your_api_key_here"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/text_view_credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:text="@string/loading_credits"
                    android:textColor="?attr/colorSecondary"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/preferred_model"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <AutoCompleteTextView
                        android:id="@+id/edit_text_preferred_model"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/e_g_mistralai_mistral_7b_instruct"
                        android:inputType="text"
                        android:completionThreshold="1" />

                    <ImageButton
                        android:id="@+id/button_refresh_models"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@android:drawable/ic_popup_sync"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Refresh Models" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_view_model_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#1A000000"
                    android:padding="8dp"
                    android:text="Select a model to see details"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/context_limit_turns"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_context_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/context_limit_hint"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/global_system_prompt"
                    android:textAppearance="?attr/textAppearanceListItem" />

                <EditText
                    android:id="@+id/edit_text_global_system_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:hint="@string/optional_override_for_all_characters"
                    android:inputType="textMultiLine"
                    android:minLines="3" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/layout_appearance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Character List Style"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/radio_group_list_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/radio_mode_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="List"
                        android:layout_marginEnd="16dp"/>

                    <RadioButton
                        android:id="@+id/radio_mode_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Card"/>
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note: Changes apply after restart."
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Primary Color"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_preview_primary"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/black"
                        android:layout_marginEnd="16dp"/>

                    <EditText
                        android:id="@+id/edit_text_hex_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="#000000"
                        android:inputType="textCapCharacters"
                        android:enabled="false"/>
                </LinearLayout>

                <TextView android:text="Red" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/seekbar_primary_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progressTint="#F44336"/>

                <TextView android:text="Green" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/seekbar_primary_g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progressTint="#4CAF50"/>

                <TextView android:text="Blue" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/seekbar_primary_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progressTint="#2196F3"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginVertical="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Secondary Color"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_preview_secondary"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardCornerRadius="24dp"
                        app:cardBackgroundColor="@color/black"
                        android:layout_marginEnd="16dp"/>

                    <EditText
                        android:id="@+id/edit_text_hex_secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="#000000"
                        android:inputType="textCapCharacters"
                        android:enabled="false"/>
                </LinearLayout>

                <TextView android:text="Red" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/seekbar_secondary_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progressTint="#F44336"/>

                <TextView android:text="Green" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/seekbar_secondary_g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progressTint="#4CAF50"/>

                <TextView android:text="Blue" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/seekbar_secondary_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="255"
                    android:progressTint="#2196F3"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_backup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Import / Export Data"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_marginBottom="24dp"/>

            <Button
                android:id="@+id/button_export_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Export Data" />

            <Button
                android:id="@+id/button_import_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Import Data" />
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/layout_save_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?android:attr/colorBackground"
        android:elevation="8dp">

        <Button
            android:id="@+id/button_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />
    </LinearLayout>

</LinearLayout>